{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "dist",
        "declaration": true,
        "declarationDir": "dist",
        "emitDeclarationOnly": false,
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "Node",
        "jsx": "react-jsx",
        "rootDir": "./lib",
        "baseUrl": "./lib",
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": [
        "lib"
    ],
    "exclude": [
        "src",
        "node_modules",
        "dist"
    ]
}